@model ProductCatalog.MVC.Models.Product
@{
    ViewData["Title"] = "Product Catalog";
}
<div><b>Product Detail for Product Id : @Model.Id</b><br /></div>

<table class="table table-bordered table-responsive table-hover">
    <tr>
        <th>Product Id </th>
        <th>Product Name </th>
        <th>Description </th>
        <th>Quantity</th>
    </tr>
   
        <tr>
            <td>@Model.Id</td>
            <td>@Model.Name</td>
            <td>@Model.Description</td>
            <td>@Model.Quantity</td>
        </tr>
   
</table>