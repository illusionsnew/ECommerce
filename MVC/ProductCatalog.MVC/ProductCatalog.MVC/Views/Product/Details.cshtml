@model ProductCatalog.MVC.Models.Product
@{
    ViewData["Title"] = "Product Catalog";
}
@if (Model != null)
{
    <div><b>Product Detail for Product Id : @Model.Id</b><br /></div>
}
else
{
    <div><b>No Products associated with your search criteria</b><br /></div>
}

@if (Model != null)
{
    <table class="table table-bordered table-responsive table-hover">
        <tr>
            <th>Product Id </th>
            <th>Product Name </th>
            <th>Description </th>
            <th>Quantity</th>
            <th>Product Image</th>
        </tr>
   
            <tr>
                <td>@Model.Id</td>
                <td>@Model.Name</td>
                <td>@Model.Description</td>
                <td>@Model.Quantity</td>
                <td><img src="data:image;base64,@System.Convert.ToBase64String(@Model.ProductImage)" class="img-circle" alt="Cinque Terre" width="70" height="50" /></td>
            </tr>
   
    </table>
}