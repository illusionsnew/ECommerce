@model IEnumerable<ProductCatalog.MVC.Models.Product>
@{
    ViewData["Title"] = "Product Catalog";  
}
<div><b>Product List</b><br /></div>  

<table class="table table-bordered table-responsive table-hover">
    <tr>
        <th>Product Id </th>
        <th>Product Name </th>
        <th>Description </th>
        <th>Quantity</th>
        <th>Product Image</th>
        <th></th>
    </tr>
   @foreach (var product in Model)
   {
        <tr>
            <td>@product.Id</td>
            <td>@product.Name</td>
            <td>@product.Description</td>
            <td>@product.Quantity</td>
            <td><img src="data:image;base64,@System.Convert.ToBase64String(product.ProductImage)" class="img-circle" alt="Cinque Terre" width="70" height="50"/></td>
            <td>
                @Html.ActionLink(
            "Delete",
            "Delete",
            "Product",
            new
            {
                id = product.Id
            },
            new
            {
                onclick = "return confirm('Are you sure you want to delete this Product?');"
            }
            )
                </td>
</tr>
    }
    

</table>
  