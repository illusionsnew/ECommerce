@model IEnumerable<ProductCatalog.MVC.Models.Product>
@{
    ViewData["Title"] = "Product Catalog";  
}
<div><b>Product List</b><br /></div>  

<table class="table table-bordered table-responsive table-hover">
    <tr>
        <th>Product Id </th>
        <th>Product Name </th>
        <th>Description </th>
        <th>Quantity</th>
    </tr>
   @foreach (var product in Model)
   {
        <tr>
            <td>@product.Id</td>
            <td>@product.Name</td>
            <td>@product.Description</td>
            <td>@product.Quantity</td>
        </tr>
    }
</table>
  